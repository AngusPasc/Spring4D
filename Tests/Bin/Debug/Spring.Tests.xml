<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<logging debug="true">
		<appender name="console" type="TConsoleAppender">
		<!--
			<threshold value="WARN" /> 
		-->
			<layout type="Spring.Logging.Layouts.TPatternLayout">
				<conversionPattern value="%Date%tab[%Thread]%tab%-5Level%tab%tab%Logger - %Message%Newline" />
			</layout>
		</appender>

		<appender name="coloredconsole" type="TColoredConsoleAppender">
		<!--
			<threshold value="WARN" /> 
		-->
			<layout type="Spring.Logging.Layouts.TPatternLayout">
				<conversionPattern value="%Date%tab[%Thread]%tab%-5Level%tab%tab%Logger - %Message%Newline" />
			</layout>
		</appender>

		<appender name="file" type="TFileAppender">
		  <file value="Samples.log" />
		  <encoding value="utf-8" />
			<layout type="Spring.Logging.Layouts.TPatternLayout">
				<conversionPattern value="%Date%tab[%Thread]%tab%-5Level%tab%tab%Logger - %Message%Newline" />
			</layout>
		</appender>
		
		<root>
			<level value="Debug" />
      <!--
			<appender-ref ref="console" />
			<appender-ref ref="coloredconsole" />
      -->
			<appender-ref ref="file" />
		</root>

		<logger name="Spring.Base">
			<level value="Debug" />
		</logger>
	</logging>
</configuration>
